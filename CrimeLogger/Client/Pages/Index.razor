@page "/"

<PageTitle>CrimeLogger</PageTitle>

<section class="colored-section" id="title">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="master-heading">Log crimes and monitor what's happening in your neighborhood.</h1>
                <button type="button" class="btn btn-dark btn-lg download-button"><span class="fab fa-apple"></span> Download</button>
                <button type="button" class="btn btn-outline-light btn-lg download-button"><span class="fab fa-google-play"></span> Download</button>
            </div>
            <div class="col-lg-6">
                <img class="title-img" src="/images/thief.jpg" alt="crimeimage">
            </div>
        </div>


    </div>
   
</section>

<!-- Features -->
<section class="white-section" id="features">
    <div class="row">
        <div class="col-lg-3 justify-content-center text-center">
            <i class="fas fa-check-circle feature-ico fa-4x"></i>
            <h3>Easy to use.</h3>
            <p class="paragraph-feature">So easy to use, register provide some basic details for notification and verification.</p>
        </div>
        <div class="col-lg-3 justify-content-center text-center">
            <i class="fas fa-share-alt feature-ico fa-4x"></i>
            <h3>Share a crime</h3>
            <p class="paragraph-feature">Login submit the basic details of the crime committed so other users in the area can receive real time alerts. </p>
        </div>
        <div class="col-lg-3 justify-content-center text-center">
            <i class="fas fa-binoculars feature-ico fa-4x"></i>
            <h3>View crimes</h3>
            <p class="paragraph-feature">Login and view crime numbers and types of crimes reported by Province City Suburb down to street level.</p>
        </div>
        <div class="col-lg-3 justify-content-center text-center">
            <i class="fas fa-check-double feature-ico fa-4x"></i>
            <h3>Get notifications.</h3>
            <p class="paragraph-feature">Amber and Red Alert. Receive amber notifications for crimes reported in your suburb, red notifications for crimes reported on your street.</p>
        </div>
    </div>
</section>

<section class="colored-section" id="testimonials">
    <div id="testimonials-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <h2 class="testimonial-text"> Crimes Reported to date.</h2>
                <i class="fas fa-bell fa-5x"></i>
            </div>
            <div class="carousel-item">
                <h2 class="testimonial-text"> Crimes reported in the last 24 hours</h2>
                <i class="far fa-bell fa-5x"></i>
            </div>
        </div>
        <a class="carousel-control-prev" role="button" href="#testimonials-carousel" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" role="button" href="#testimonials-carousel" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>






<!-- Press -->
<section class="colored-section" id="press">

    <h3>Advertise Here<span class="far fa-hand-point-down fa-2x"></span></h3>
    <img class="press-logo" src="images/adds/HomePageAdd.png" alt="Advert">

</section>

<!-- Pricing -->
<section class="white-section" id="pricing">

    <h2 class="pricing-h2">A Plan for all</h2>
    <p class="para">A simple and affordable price plan</p>

    <div class="row">
        <div class="pricing-col col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="pricing-headers">Basic</h3>
                </div>
                <div class="card-body">
                    <h2 class="pricing-h2">Free</h2>
                    <p>Report Cimes</p>
                    <p>View Crime Map</p>
                    <p>View Crime Details</p>
                    <p>Receive Alert Email Notifications</p>
                    <a href="crime/registration" type="button" class="btn btn-outline-dark btn-lg col-6 mx-auto">Register</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="colored-section" id="cta">

    <h3 class="callfooter">Download the app today and make a difference.</h3>
    <div class="button-bottom">
        <button type="button" class="btn btn-dark btn-lg download-button-action"><span class="fab fa-apple"></span> Download</button>
        <button type="button" class="btn btn-light btn-lg download-button-action"><span class="fab fa-google-play"></span> Download</button>
    </div>
</section>

    <footer class="footer">
        <div class="social" style="text-align:center">
            <i class="fab-social fab fa-twitter mr-2"></i>
            <i class="fab-social fab fa-facebook-f mr-2"></i>
            <i class="fab-social fab fa-instagram mr-2"></i>
            <i class="fab-social fas fa-envelope"></i>
        </div>
        <p class="paragraph-footer" style="text-align:center">©Copyright  2020 - @_copyRightDate crimelog </p>

    </footer>

@code {
    public int _copyRightDate { get; set; } = DateTime.Now.Year;
}